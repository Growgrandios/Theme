<script>
  function setCookie(name, value, days) {
    let expires = "";
    if (days) {
      let date = new Date();
      date.setTime(date.getTime() + (days * 24 * 60 * 60 * 1000));
      expires = "; expires=" + date.toUTCString();
    }
    document.cookie = name + "=" + (value || "") + expires + "; path=/; secure; samesite=strict";
  }

  function getCookie(name) {
    let nameEQ = name + "=";
    let ca = document.cookie.split(';');
    for (let i = 0; i < ca.length; i++) {
      let c = ca[i].trim();
      if (c.indexOf(nameEQ) === 0) return c.substring(nameEQ.length, c.length);
    }
    return null;
  }

  function skipVideo(videoOverlay) {
    if (videoOverlay) {
      videoOverlay.style.display = "none";
      setCookie("video_played", "true", 30);
    }
  }

  document.addEventListener("DOMContentLoaded", function() {
    const isDesktop = window.innerWidth > 768;
    const ageOverlay = document.getElementById("age-overlay");
    const videoOverlay = document.getElementById("entry-video-overlay");
    const video = document.getElementById("entry-video");

    const ageVerifiedCookie = getCookie("age_verified") === "true";
    const videoPlayed = getCookie("video_played") === "true";

    if (ageVerifiedCookie) {
      ageOverlay.style.display = "none";
    } else if (isDesktop && !videoPlayed) {
      videoOverlay.classList.add("visible");
    }

    if (videoPlayed && videoOverlay) {
      videoOverlay.style.display = "none";
    }

    if (video) {
      video.addEventListener("ended", () => skipVideo(videoOverlay));
      video.addEventListener("error", () => skipVideo(videoOverlay));
    }
  });

  function ageVerified() {
    setCookie("age_verified", "true", 7);
    document.documentElement.classList.add("age-verified");
    const ageOverlay = document.getElementById("age-overlay");
    ageOverlay.style.display = "none";

    const videoOverlay = document.getElementById("entry-video-overlay");
    const video = document.getElementById("entry-video");
    if (videoOverlay && video && window.innerWidth > 768 && getCookie("video_played") !== "true") {
      // Proaktiver Check für schlechte Verbindung
      const connection = navigator.connection || {};
      if (connection.downlink < 1) { // Unter 1 Mbps: Skip
        skipVideo(videoOverlay);
        return;
      }

      videoOverlay.classList.add("unblurred");
      video.loop = false;
      video.muted = false;
      video.currentTime = 0;

      const timeout = setTimeout(() => skipVideo(videoOverlay), 3000);

      video.play().then(() => {
        clearTimeout(timeout);
      }).catch(() => {
        clearTimeout(timeout);
        skipVideo(videoOverlay);
      });
    }
  }

  function isUnder18() {
    window.location.href = "https://www.google.de";
  }
</script>
